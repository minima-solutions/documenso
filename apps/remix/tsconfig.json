{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "node",
      "vite/client"
    ],
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@documenso/api": [
        "../../packages/api"
      ],
      "@documenso/assets": [
        "../../packages/assets"
      ],
      "@documenso/auth": [
        "../../packages/auth"
      ],
      "@documenso/ee": [
        "../../packages/ee"
      ],
      "@documenso/lib": [
        "../../packages/lib"
      ],
      "@documenso/prisma": [
        "../../packages/prisma"
      ],
      "@documenso/trpc": [
        "../../packages/trpc"
      ],
      "@documenso/ui": [
        "../../packages/ui"
      ],
      "@documenso/tailwind-config": [
        "../../packages/tailwind-config"
      ]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
